{{#extends "base"}}
  {{#block "title"}}Change Password{{/block}}
  {{#block "content"}}
    <h1 class="mb-4">Change Password</h1>
    <form method="post">
      <input type="hidden" name="_csrf" value="{{csrfToken}}" />
      <p>Changing password for {{user}}</p>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          type="password"
          class="form-control"
          id="password"
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <button type="reset" class="btn btn-danger">Reset</button>
    </form>
  {{/block}}

  {{#block "js"}}
    <script>
      document.getElementById("dashboard-link").style.display = "none"; const
      pwField = document.getElementById("password");
      pwField.addEventListener("input",()=>{ if (pwField.value === "12345") {
      window.alert("Please choose another password.") } })
    </script>
  {{/block}}
{{/extends}}
